
resource "aws_iam_role" "main" {
    name = "${var.environment}-mqtt-pipelines"
    assume_role_policy = <<EOF
{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Action": "sts:AssumeRole",
      "Principal": {
        "Service": "ec2.amazonaws.com"
      },
      "Effect": "Allow",
      "Sid": ""
    }
  ]
}
EOF
}

data "aws_iam_policy_document" "firehose_access" {
  statement {
    actions = [
      "firehose:PutRecord",
      "firehose:PutRecordBatch"
    ]

    resources = [
      "*"
    ]
  }
}

resource "aws_iam_policy" "firehose_access" {
  name = "${var.environment}MqttPipelineFirehoseAccess"
  path = "/"
  policy = "${data.aws_iam_policy_document.firehose_access.json}"
}

resource "aws_iam_role_policy_attachment" "firehose_access" {
  role = "${aws_iam_role.main.name}"
  policy_arn = "${aws_iam_policy.firehose_access.arn}"
}

resource "aws_iam_role_policy_attachment" "main" {
  role = "${aws_iam_role.main.name}"
  policy_arn = "arn:aws:iam::aws:policy/AmazonEC2ReadOnlyAccess"
}

resource "aws_iam_instance_profile" "main" {
  name = "${var.environment}-mqtt-pipelines"
  role = "${aws_iam_role.main.name}"
}
